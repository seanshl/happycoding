<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	default-init-method="init" default-destroy-method="destroy"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">



	<bean id="person" class="com.shiyaoeating.spring.test.Person"
		scope="singleton" init-method="onCreate" destroy-method="onDestroy"
		factory-method="getInstance">
		<constructor-arg value="777" name="id"></constructor-arg>
		<constructor-arg value="Mary" name="name"></constructor-arg>
		<property name="taxId" value="123"></property>
		<property name="address" ref="address"></property>
	</bean>

	<bean id="person2" class="com.shiyaoeating.spring.test.Person"
		scope="singleton" init-method="onCreate" destroy-method="onDestroy"
		factory-method="createPerson" factory-bean="personfactory">
		<constructor-arg value="654" name="id"></constructor-arg>
		<constructor-arg value="Mike" name="name"></constructor-arg>
		<property name="taxId" value="123"></property>
		<property name="address" ref="address"></property>
	</bean>

	<bean id="address" class="com.shiyaoeating.spring.test.Address">
		<constructor-arg name="street" value="5920 Pershing Ave"></constructor-arg>
		<constructor-arg name="postcode" value="3522"></constructor-arg>
	</bean>

	<bean id="address2" class="com.shiyaoeating.spring.test.Address" p:street="23 Vinyard Lane" p:postcode="3442">		
	</bean>

	<bean id="personfactory" class="com.shiyaoeating.spring.test.PersonFactory">
	</bean>
	

</beans>
